description    "s3fs-fuse process monitoring tool"

start on runlevel [2345]
stop on runlevel [!2345]

expect daemon
respawn
respawn limit 5 30

env PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

pre-start script
  mkdir -p /var/run/s3fs
end script

exec bluepill load /etc/bluepill/s3fs.pill

